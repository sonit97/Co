@model IEnumerable<Model.ViewModel.SanPhamViewModel>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_ProductLayout.cshtml";
}

<div class="col-md-9 product1">
    <div class="bottom-product">
        @foreach (var item in Model)
        {
            <div class="col-md-4 bottom-cd simpleCart_shelfItem">
                <div class="product-at ">
                    <a href="single.html">
                        <img class="img-responsive" src="@Url.Content(item.HinhAnh)" alt="" style="width:200px; height:200px">
                        <div class="pro-grid">
                            <a class="buy-in" style="text-decoration:none;" href="@Url.RouteUrl("XemChiTiet",new { @id=@item.MaSP,@tensp=@item.TenSP})"><span class="buy-in">Xem chi tiết</span></a>
                        </div>
                    </a>
                </div>
                <p class="tun">@item.TenSP<br /><span>@item.DonGia.Value.ToString("#,##") VNĐ</span></p>
                @* Thẻ a nút thêm giỏ hàng *@
                <a href="@Url.Action("ThemGioHang","GioHang",new { @MaSP=item.MaSP,@strURL=Request.Url.ToString()})" class="item_add"><p class="number item_price"><i> </i>Thêm giỏ hàng</p></a>
            </div>
        }
    </div>
</div>



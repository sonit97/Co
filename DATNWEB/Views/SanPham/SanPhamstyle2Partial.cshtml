@model  IEnumerable<Model.EF.SanPham>

<div class="content-top-bottom">
    <div class="col-md-6 men">
        <a href="@Url.RouteUrl("XemChiTiet",new { @id=Model.ElementAt(0).MaSP,@tensp= @Model.ElementAt(0).TenSP})" class="b-link-stripe b-animate-go  thickbox">
            @* @Url.Content("~/Content/client/imgsp/"+Model.ElementAt(0).HinhAnh) *@
            <img class="img-responsive" src="@Url.Content(Model.ElementAt(0).HinhAnh)" alt="">

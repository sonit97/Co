<div class="col-md-9 product">             
            <div class="panel panel-default">
                <div class="panel-heading">
                   <p style="font-weight: bold;"> Danh sách đơn hàng</p>
                </div>
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>

                            <th>Mã đơn đặt hàng</th>
                            <th>Ngày đặt</th>
                            <th>Tên khách hàng</th>
                            <th>Địa chỉ</th>
                            @*<th>Sđt</th>*@
                            <th>Tổng tiền</th>
                            <th>Tình trạng</th> 
                            <th>Hủy đơn hàng</th>                          
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            
                            <tr @*id="row_@item.MaDDH"*@>

                                <td>@item.MaDDH</td>
                                <td>@item.NgayDat</td>
                                <td>@item.TenKhachHang</td>
                                <td>@item.DiaChi</td>
                                 @*<td>@item.SDT</td>*@
                               
                                <td>@(item.TongTien.Value.ToString("#,##")) VNĐ </td>
                                 @if (item.TinhTrang == 0)
                                 {
                                     <td>Chờ duyệt</td>
                                 }
                                 else if (item.TinhTrang == 1)
                            {
                                     <td>Đã Duyệt</td>
                                 }else if (item.TinhTrang == 2)
                            {
                                     <td>Đã Hủy</td>
                                 }
                                @*<td><a>@Html.Raw(item.TinhTrang?"<strong>Đã Duyệt</strong>" : "Chờ Duyệt")</a></td>*@
                               <td>
                                 @if (item.TinhTrang == 0)
                                {                                      
                                         <a href="@Url.Action("XemDonHang","KhachHang",new { @mathanhvien = item.MaTV,@ma=item.MaDDH})" class="btn btn-danger" data-id="@item.MaDDH">Hủy</a>                                   
                                }
                                 </td>

                                 @*<td>
                                    <a href="/Admin/User/Edit/@item.ID">Sửa</a>
                                    |
                                    @Ajax.ActionLink("Xoá", "Delete", new { @id = item.ID }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có muốn xoá bản ghi này?",
                                       OnComplete = "$('#row_" + @item.ID + "').remove()",
                                       HttpMethod = "Delete"
                                   })



                                </td>*@
                            </tr>
                            

                        }


                    </tbody>

                </table>
            </div>
       
    </div>

@using Model.EF
@model IEnumerable<DonDatHang>
@{
    ViewBag.Title = "DonHangGiao";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section scriptsdatatable{
    <script src="~/Areas/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/Areas/Admin/assets/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="~/Areas/Admin/assets/datatables-responsive/dataTables.responsive.js"></script>
}
<h2>Đơn hàng cần giao</h2>

@section dataTables{
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true,
                "lengthMenu": [[1, 2, 5, -1], [1, 2, 5, "All"]]
            });
        });
    </script>
}
<table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
    <thead>
        <tr>

            <th>Mã đơn đặt hàng</th>
            <th>Mã khách hàng</th>
            <th>Tên khách hàng</th>
            <th>Sđt</th>
            <th>Địa chỉ giao</th>
            <th>Ngày đặt</th>           
            @*<th>Ưu đãi</th>*@
            <th>Tổng tiền</th>
                
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr @*id="row_@item.MaDDH"*@>

                <td>@item.MaDDH</td>
                <td>@item.MaKH</td>
                <td>@item.KhachHang.TenKH</td>
                <td>@item.KhachHang.SoDienThoai</td>
                <td>@item.KhachHang.DiaChi</td>
                <td>@item.NgayDat</td>                
                <td>@(item.TongTien.Value.ToString("#,##")) VNĐ </td>
                @*@if (item.TinhTrang == 1)
                {
                    <td>Đã Duyệt</td>
                }*@                        
            </tr>
        }
    </tbody>

</table>




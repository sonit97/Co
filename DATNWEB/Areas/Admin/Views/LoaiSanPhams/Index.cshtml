@model IEnumerable<Model.EF.LoaiSanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section scriptsdatatable{
    <script src="~/Areas/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/Areas/Admin/assets/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="~/Areas/Admin/assets/datatables-responsive/dataTables.responsive.js"></script>
}
<h2>Danh Mục Sản Phẩm</h2>
@section dataTables{
    <script>
        $(document).ready(function() {
            $('#dataTables-example').DataTable({
                responsive: true,
                "lengthMenu": [[1, 2, 5, -1], [1, 2, 5, "All"]]
            });
        });
    </script>
}
<p>
    @Html.ActionLink("Thêm Mới Danh Mục", "Create")
</p>
<table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
    <thead>
        <tr>
            <th>
             Mã Loại SP
            </th>
            <th>
                Tên Loại
            </th>
            <th>#</th>
        </tr>
        </thead>
<tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaLoaiSP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenLoai)
                </td>
                <td>
                    @Html.ActionLink(" ", "Edit", new { id = item.MaLoaiSP },new {  @class = "fa fa-wrench fa-fw" }) |
                  
                    @Html.ActionLink(" ", "Delete", new { id = item.MaLoaiSP }, new { @class = "glyphicon glyphicon-trash" })
                </td>
            </tr>
        }
    <tbody>
</table>

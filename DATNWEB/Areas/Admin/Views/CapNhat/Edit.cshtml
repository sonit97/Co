@model Model.EF.DonDatHang

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Cập nhật tình trạng giao hàng</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaDDH)

        <div class="form-group">
            @Html.HiddenFor(model => model.NgayDat, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*<td>@Html.Hidden("MaThanhVien", tv.MaThanhVien)</td>*@
                @Html.HiddenFor(model => model.NgayDat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgayDat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.TinhTrang, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.TinhTrang, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TinhTrang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.MaKH, "MaKH")
            <div class="col-md-10">
                @Html.Hidden("MaKH", null)
                @Html.ValidationMessageFor(model => model.MaKH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.UuDai, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.UuDai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UuDai, "", new { @class = "text-danger" })
            </div>
        </div>
        @if (Model.NVGiaoHang == null)
        {
        <div class="form-group">
            @Html.LabelFor(model => model.NVGiaoHang, "NV Giao Hàng", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.DropDownListFor(model => model.NVGiaoHang, null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NVGiaoHang, "", new { @class = "text-danger" })
            </div>
        </div>
        }
        else
        {
            <div class="form-group">
                @Html.HiddenFor(model => model.NVGiaoHang, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.HiddenFor(model => model.NVGiaoHang, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NVGiaoHang, "", new { @class = "text-danger" })
                </div>
            </div>
        }
        <div class="form-group">
            @Html.LabelFor(model => model.TinhTrangGH,"Tình trạng giao hàng", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.DropDownListFor(model => model.TinhTrangGH, new List<SelectListItem>
                {
                new SelectListItem{Text="Đang Giao", Value="0"},
                new SelectListItem{Text="Đã Giao", Value="1"},
                 new SelectListItem{Text="Không Nhận", Value="2"}                
                }, htmlAttributes: new { @class = "form-control" })
                @*@Html.EditorFor(model => model.TinhTrangGH, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.TinhTrangGH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.TongTien, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.TongTien, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TongTien, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
